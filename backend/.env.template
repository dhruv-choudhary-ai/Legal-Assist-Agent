# ===================================
# LEGAL DOCUMENTATION ASSISTANT
# Environment Configuration
# ===================================

# ===================================
# AZURE OPENAI CONFIGURATION (REQUIRED)
# ===================================
# Get these from: https://portal.azure.com â†’ Azure OpenAI Service
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Model Deployments (must match your Azure deployments)
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=legal-bge-m3
AZURE_OPENAI_FINETUNED_DEPLOYMENT=

# ===================================
# DATABASE CONFIGURATION (REQUIRED)
# ===================================
DATABASE_NAME=your_database_name
DATABASE_USER=your_database_user
PASSWORD=your_database_password
DATABASE_HOST=your_database_host
DATABASE_PORT=5432

# ===================================
# CHAT CONFIGURATION
# ===================================
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_P=0.95
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# ===================================
# CONVERSATION MANAGEMENT
# ===================================
MAX_CONVERSATION_HISTORY=10
CONVERSATION_TIMEOUT=3600

# ===================================
# RAG (RETRIEVAL AUGMENTED GENERATION)
# ===================================
ENABLE_RAG=true
CHROMA_PERSIST_DIRECTORY=./chroma_db
COLLECTION_NAME=legal_documents
TOP_K_RETRIEVAL=5

# ===================================
# DOCUMENT PROCESSING
# ===================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===================================
# REDIS CONFIGURATION (OPTIONAL)
# For caching and session management
# ===================================
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_STREAMING=true
ENABLE_FINETUNED_MODEL=false

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=INFO
LOG_AI_REQUESTS=true

# ===================================
# RATE LIMITING
# ===================================
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_DAY=1000000

# ===================================
# SECURITY (PRODUCTION)
# ===================================
# SECRET_KEY=generate_secure_random_key_here
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
# ENABLE_HTTPS=true

